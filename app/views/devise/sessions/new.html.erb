<div class="container" id="login-form" style="max-width: 900px;">
  <div class="row login-content">
    <div class="col-12 col-md-6 login-form">
      <div class="login-form">
        <h2 class="form-title mb-4"><strong>Log in</strong></h2>
        <div class="login-form">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions form-button">
              <%= f.button :submit, "Log in", class: "btn-login" %>
            </div>
          <% end %>
        </div>
        <div class="shared-links">
          <p>New here? <%= render "devise/shared/links" %></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-6 login-img">
    </div>
  </div>
</div>
