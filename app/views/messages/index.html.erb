<div class="container mt-4">
  <div class="booking-card">
    <div class="trip_detail position-relative">
      <h3 class="summary-title">Messages with host: <%= @booking.trip.user.first_name %></h3>
      <div class="row">
        <div class="col-md-12 col-lg-8">
            <div class="booking-messages">
              <% @messages.each do |message| %>
                <%= render message %>
              <% end %>
              <%= simple_form_for [@booking, @message] do |f| %>
              <div class="mt-4">
                <%= f.input :content, placeholder: "Type message", label: false%>
              </div>
              <% end %>
            </div>
        </div>
        <div class="col-md-12 col-lg-1">
          <div class="vl"></div>
        </div>
        <div class="col-md-12 col-lg-3">
          <%= link_to 'Back to booking', @booking, class: 'btn btn-primary position-fixed top-40' %>
        </div>
      </div>
    </div>

</div>
