<% if trip.bookings.empty? %>
  <div class="user-booking-card row">
    <div class="col-10 btn-column">
      <p>No bookings yet for this trip</p>
    </div>
    <div class="col-2 btn-column">
      <%= link_to "View trip", trip_path(trip), class: "btn btn-booking-primary w-100" %>
    </div>
  </div>
<% else %>
  <% trip.bookings.each do |booking| %>
    <div class="user-booking-card row">
      <div class="col-md-0 col-lg-2 avatar-column">
        <% if booking.user.profile_picture.attached? %>
          <%= cl_image_tag booking.user.profile_picture.key, class: "user-avatar" %>
        <% end %>
      </div>
      <div class="col-md-12 col-lg-10">
        <div class="row">
          <div class="col-md-12 col-lg-8">
            <p><strong>Booking reference: </strong><%= booking.id %></p>
            <p class="text-secondary"><strong>Booking date: </strong><%= booking.created_at.strftime("%d/%m/%Y") %></p>
            <p class="text-secondary"><strong>Client name: </strong><%= booking.user.first_name + " " + booking.user.last_name %></p>
            <p class="text-secondary"><strong>Number of guests: </strong> <%= booking.total_guests %> guests</p>
            <p class="text-secondary"><strong>Total price: </strong>$<%= booking.total_price %> AUD</p>
          </div>
          <div class="col-4 btn-column">
            <%= link_to "Contact #{booking.user.first_name}", booking_messages_path(booking), class: "btn btn-booking-warning w-100" %>
            <%= link_to "View trip", trip_path(trip), class: "btn btn-booking-primary w-100" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
