<div class="container">
  <h1>Trip management</h1>

  <p>Hello <%= @current_user.first_name %>, these are the trips you've created :</p>
  <p><%= link_to "Adding new trip", new_trip_path, class: "btn btn-primary" %></p>

  <div class="row card-grid">
    <div class="col-lg-3">

        <% @trips.each do |trip| %>
          <div class="card mb-2">
            <%= link_to trip.name, trip_path(trip) %>
            <%= trip.departure_date_time %>
            <%= link_to "", trip_path(trip),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this trip ?" },
              class: "fa-solid fa-trash-can" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
